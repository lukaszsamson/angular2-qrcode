{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "mapRoot": "",
    "skipLibCheck": true,
    "baseUrl": "",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "compiled"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "debug": true,
    "genDir": "compiled",
    "skipMetadataEmit" : true
  }
}
